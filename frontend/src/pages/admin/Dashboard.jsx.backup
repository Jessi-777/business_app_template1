        <div className="grid md:grid-cols-3 gap-3 mt-6">
          <button className="px-6 py-3 bg-white/10 border border-white/20 text-white rounded-xl hover:bg-white/20 transition-all duration-300 font-medium text-sm">
            Add New Affiliate
          </button>
          <button className="px-6 py-3 bg-white/10 border border-white/20 text-white rounded-xl hover:bg-white/20 transition-all duration-300 font-medium text-sm">
            Process Payouts
          </button>
          <button className="px-6 py-3 bg-white/10 border border-white/20 text-white rounded-xl hover:bg-white/20 transition-all duration-300 font-medium text-sm">
